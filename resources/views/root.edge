<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/png" sizes="64x64" href="favicon.png">
  <link rel="stylesheet" href="bootstrap.min.css">
  <title>📦 Home Vault 📦</title>
</head>

<body onload="start()">
  <h1 class="d-none">📦 Home Vault 📦</h1>
  <nav class="navbar navbar-dark bg-dark mb-2">
    <div class="container-fluid">
      <span class="navbar-brand mb-0">📦 Home Vault 📦</span>
    </div>
  </nav>
  <div class="container-fluid">
    <input type="file" id="file" class="d-none" multiple onchange="preview(this)">
    <input type="button" class="btn btn-outline-dark" value="Search 📂"
      onclick="document.getElementById('file').click()">
    <textarea class="form-control" id="output" disabled></textarea>
  </div>
  <script>
    const output = (text) => {
      document.getElementById('output').innerHTML += text + '\n'
    }
    const start = async () => {
      try {
        const response = await fetch('extensions.json')
        output(response.json())
      } catch (error) {
        output('🌐 fetch');
      }
    }
    const preview = (input) => {
      output('🧮 ' + input.files.length)
      for (var i = 0; i < input.files.length; i++) {
        output('📁 ' + input.files[i].name);
      }
    }
  </script>
</body>

</html>